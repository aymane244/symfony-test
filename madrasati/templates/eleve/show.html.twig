{% extends 'base.html.twig' %}

{% block title %}Les Eleves{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
{% include('header.html.twig') %}
<div class="container mt-5">
{% for message in app.flashes('success') %}
        <div class="alert alert-success text-center" role="alert">
            <div class="flash-success">
                {{ message }}
            </div>
        </div>
    {% endfor %}
        <a class="text-decoration-none" href="{{ path('app_eleve') }}">Retour</a>
        <h1 class="text-center">Les eleves</h1>
<table class="table table-dark">
    <thead>
        <tr>        
            <th>#</th>
            <th>fullname</th>
            <th>Date de naissance</th>
            <th>CINE</th>
            <th>Sex</th>
            <th>Parent</th>
            <th>Niveau</th>
            <th>Ann√©e Scolaire</th>
            <th>Photo</th>
            <th>Service</th>
        </tr>
    </thead>
{% for eleve in eleves %}
    <tbody>
        <tr> 
            <td>{{eleve.id}}</td>
            <td>{{eleve.fullname}}</td>
            <td>{{eleve.dateNaissance|date("d-m-Y")}}</td>
            <td>{{eleve.cne}}</td>
            <td>{{eleve.sexe}}</td>
            <td>{{eleve.parent.fullname}}</td>
            <td>{{eleve.niveau.niveau}}</td>
            <td>{{eleve.anneeScolaire|date("Y")}}/{{date|date('Y')}}</td>
            <td><img src="{{ asset('uploads/brochures/'~ eleve.photo) }}" style="max-width:100px" alt="..."></td>
            {# <td>{{eleve.service.collection}}</td> #}
        </tr>
    </tbody>
{% endfor %}
</table>


</div>
{% endblock %}